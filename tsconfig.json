{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts"
, "src/routes.ts", "src/error-handler.ts", "src/get-say-hello.ts"  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}